<%= form_for @user do |form| %>
  <% if flash[:errors].any? %>
    <div id="error_explanation">
      <h2><%= pluralize(flash[:errors].count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% flash[:errors].each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <% if @user.valid? %>
    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :new_password %>
    <%= form.password_field :new_password %>
  </div>

  <div class="field">
    <%= form.label :validate_new_password %>
    <%= form.password_field :validate_new_password %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
